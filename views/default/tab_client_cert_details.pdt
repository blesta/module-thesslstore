                            if (result.is_error == true){
                                alert("Error: "+ result.message);
                            }
                            else{
                                alert(result.message);
                            }
                            $(".loading_container", $('form')).remove();
                        },
                        null,
                        {dataType: 'json'}
                    );
        });
	});
</script>